{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "complexity": [2, 3],
    "indent": [2, 2],
    "no-else-return": 2,
    "semi": [2, "always"],
    "space-unary-ops": 2,
    "quotes": [2, "single", {
      "avoidEscape": true
    }]
  }
}
